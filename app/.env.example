# 서버 포트
PORT=4000

# 데이터베이스 설정
DB_HOST=mariadb
DB_USER=ripy_user
DB_PASSWORD=your_db_password_here
DB_NAME=ripy_token

# ========================================
# Solana 네트워크 설정
# ========================================
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet

# ========================================
# 회사 지갑 설정 (Phase 1-A 표준화)
# ========================================
# 회사 지갑 공개 주소 (feepayer 역할)
COMPANY_WALLET_ADDRESS=your_company_wallet_public_address_here

# 회사 지갑 프라이빗 키 (트랜잭션 서명용)
# ⚠️ 실제 키는 절대 Git에 커밋하지 말 것
# ⚠️ 프로덕션: Naver Cloud Secret Manager 사용
COMPANY_WALLET_PRIVATE_KEY=your_company_wallet_private_key_here

# ========================================
# RIPY 토큰 설정
# ========================================
# RIPY 토큰 민트 주소 (SPL Token)
RIPY_TOKEN_MINT_ADDRESS=your_ripy_token_mint_address_here

# 토큰 소수점 자리수
TOKEN_DECIMALS=9

# ========================================
# 암호화 설정
# ========================================
# 마스터 암호화 키 (AES-256-GCM)
# 64자 16진수 문자열 (256비트)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# ========================================
# Service Key 설정
# ========================================
# 허용된 Service Key 목록 (쉼표로 구분)
ALLOWED_SERVICE_KEYS=your_service_key_here

# IP 화이트리스트 (선택사항, 쉼표로 구분)
# ALLOWED_IPS=127.0.0.1,your_server_ip_here

# ========================================
# 회사 지갑 다중 전송 API 설정 (Company Send)
# ========================================
COMPANY_SEND_WALLET_ADDRESS=your_company_send_wallet_address_here
COMPANY_SEND_WALLET_PRIVATE_KEY=your_company_send_wallet_private_key_here
COMPANY_SEND_BATCH_SIZE=100
COMPANY_SEND_MAX_RETRY=3
COMPANY_SEND_RETRY_DELAY=1000
COMPANY_SEND_CONCURRENCY=5